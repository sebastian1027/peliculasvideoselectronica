<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>
        <variable
            name="handler"
            type="movil.unicauca.peliculas.RegistroActivity"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline3"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="296dp" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="@dimen/dimens0"
            android:layout_height="@dimen/dimens46"
            app:layout_constraintRight_toLeftOf="@+id/guideline3"
            android:layout_marginRight="@dimen/dimens8"
            android:layout_marginLeft="@dimen/dimens8"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="@dimen/dimens8"
            android:layout_marginEnd="@dimen/dimens8"
            android:id="@+id/textInputLayout"
            app:layout_constraintBottom_toTopOf="@+id/textInputLayout2">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/name"
                android:inputType="text"
                android:id="@+id/edtnombre"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="@dimen/dimens0"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toLeftOf="@+id/guideline3"
            android:layout_marginRight="@dimen/dimens8"
            android:layout_marginLeft="@dimen/dimens8"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout"
            android:layout_marginStart="@dimen/dimens8"
            android:layout_marginEnd="@dimen/dimens8"
            android:id="@+id/textInputLayout2"
            app:layout_constraintBottom_toTopOf="@+id/textInputLayout3">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/lastname"
                android:inputType="text"
                android:id="@+id/edtapellido"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="@dimen/dimens0"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toLeftOf="@+id/guideline3"
            android:layout_marginRight="@dimen/dimens8"
            android:layout_marginLeft="@dimen/dimens8"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout2"
            android:layout_marginStart="@dimen/dimens8"
            android:layout_marginEnd="@dimen/dimens8"
            android:id="@+id/textInputLayout3"
            app:layout_constraintBottom_toTopOf="@+id/textInputLayout5">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:id="@+id/edtemail"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="@dimen/dimens0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimens8"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/guideline3"
            android:layout_marginRight="@dimen/dimens8"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout3"
            android:layout_marginStart="@dimen/dimens8"
            android:layout_marginEnd="@dimen/dimens8"
            android:id="@+id/textInputLayout5"
            app:layout_constraintBottom_toBottomOf="parent">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/year"
                android:inputType="number"
                android:id="@+id/edtedad"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="@dimen/dimens0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimens8"
            app:layout_constraintLeft_toLeftOf="@+id/guideline3"
            android:layout_marginRight="@dimen/dimens8"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="@dimen/dimens8"
            android:layout_marginEnd="@dimen/dimens8"
            android:id="@+id/textInputLayout4"
            app:layout_constraintBottom_toTopOf="@+id/textInputLayout6">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/user"
                android:inputType="text"
                android:id="@+id/edtusuario"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="@dimen/dimens0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimens8"
            app:layout_constraintLeft_toLeftOf="@+id/guideline3"
            android:layout_marginRight="@dimen/dimens8"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout4"
            app:layout_constraintBottom_toTopOf="@+id/btnregistrate"
            android:layout_marginStart="@dimen/dimens8"
            android:layout_marginEnd="@dimen/dimens8"
            android:id="@+id/textInputLayout6">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:id="@+id/edtcontrasenia"
                />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btnregistrate"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="@dimen/dimens0"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimens8"
            android:layout_marginLeft="@dimen/dimens8"
            android:layout_marginRight="@dimen/dimens8"
            android:text="@string/register"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/guideline3"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="@dimen/dimens8"
            android:layout_marginEnd="@dimen/dimens8"
            android:onClick="@{()->handler.register()}"
            />

    </android.support.constraint.ConstraintLayout>
</layout>
