<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="movil.unicauca.peliculas.RegistroActivity"
    >
    <data>
        <variable
            name="handler"
            type="movil.unicauca.peliculas.RegistroActivity"/>
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="@dimen/dimens0"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimens8"
            android:layout_marginLeft="@dimen/dimens8"
            android:layout_marginRight="@dimen/dimens8"
            android:layout_marginStart="@dimen/dimens8"
            android:layout_marginTop="@dimen/dimens8"
            android:text="@string/register"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@android:color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/txtlastname"
            android:layout_width="@dimen/dimens0"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimens8"
            android:layout_marginLeft="@dimen/dimens8"
            android:layout_marginRight="@dimen/dimens8"
            android:layout_marginStart="@dimen/dimens8"
            app:layout_constraintBottom_toTopOf="@+id/txtemail"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtname">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/lastname"
                android:inputType="text"
                android:id="@+id/edtapellido"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/txtemail"
            android:layout_width="@dimen/dimens0"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimens8"
            android:layout_marginLeft="@dimen/dimens8"
            android:layout_marginRight="@dimen/dimens8"
            android:layout_marginStart="@dimen/dimens8"
            app:layout_constraintBottom_toTopOf="@+id/txtedad"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtlastname">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:id="@+id/edtemail"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/txtname"
            android:layout_width="@dimen/dimens0"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimens8"
            android:layout_marginLeft="@dimen/dimens8"
            android:layout_marginRight="@dimen/dimens8"
            android:layout_marginStart="@dimen/dimens8"
            app:layout_constraintBottom_toTopOf="@+id/txtlastname"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/name"
                android:inputType="text"
                android:id="@+id/edtnombre"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/txtedad"
            android:layout_width="@dimen/dimens0"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimens8"
            android:layout_marginLeft="@dimen/dimens8"
            android:layout_marginRight="@dimen/dimens8"
            android:layout_marginStart="@dimen/dimens8"
            app:layout_constraintBottom_toTopOf="@+id/txtusuario"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtemail">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/year"
                android:inputType="number"
                android:id="@+id/edtedad"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/txtusuario"
            android:layout_width="@dimen/dimens0"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimens8"
            android:layout_marginLeft="@dimen/dimens8"
            android:layout_marginRight="@dimen/dimens8"
            android:layout_marginStart="@dimen/dimens8"
            app:layout_constraintBottom_toTopOf="@+id/txtpassword"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtedad">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/user"
                android:inputType="text"
                android:id="@+id/edtusuario"
                />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btnregistrate"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="@dimen/dimens0"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimens8"
            android:layout_marginEnd="@dimen/dimens8"
            android:layout_marginLeft="@dimen/dimens8"
            android:layout_marginRight="@dimen/dimens8"
            android:layout_marginStart="@dimen/dimens8"
            android:text="@string/register"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:onClick="@{()->handler.register()}"
            />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/txtpassword"
            android:layout_width="@dimen/dimens0"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimens8"
            android:layout_marginLeft="@dimen/dimens8"
            android:layout_marginRight="@dimen/dimens8"
            android:layout_marginStart="@dimen/dimens8"
            app:layout_constraintBottom_toTopOf="@+id/btnregistrate"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtusuario">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:id="@+id/edtcontrasenia"
                />

        </android.support.design.widget.TextInputLayout>



    </android.support.constraint.ConstraintLayout>
    </ScrollView>
</layout>